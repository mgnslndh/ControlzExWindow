<controls:CustomWindow x:Class="ControlzExWindow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:ControlzExWindow.Controls"
        mc:Ignorable="d"
        ShowTitleBar="True"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock>Hello World</TextBlock>
            <Button Name="SwitchTheme" VerticalAlignment="Center" HorizontalAlignment="Center" Click="SwitchTheme_OnClick">Switch Theme</Button>
            <ToggleButton Name="ToggleShowTitleBar" VerticalAlignment="Center" HorizontalAlignment="Center" Click="ToggleShowTitleBar_OnClick">Toggle Show Title Bar</ToggleButton>
        </StackPanel>

    </Grid>
</controls:CustomWindow>
