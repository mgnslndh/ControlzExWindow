<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:ControlzExWindow"
    xmlns:controls="clr-namespace:ControlzExWindow.Controls"
    xmlns:themes="clr-namespace:ControlzExWindow.Themes">



    <ResourceDictionary.MergedDictionaries>
        <themes:ThemeResourceDictionary/>
        <ResourceDictionary Source="/Themes/Styles/CustomWindow.xaml"/>
        <ResourceDictionary Source="/Themes/Styles/CustomThumbContentControl.xaml"/>
        <ResourceDictionary Source="/Themes/Styles/WindowCommandsControl.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="{x:Type controls:WindowCommandsControl}" BasedOn="{StaticResource WindowCommandsControl}"/>
    <Style TargetType="{x:Type controls:CustomThumbContentControl}" BasedOn="{StaticResource {x:Type ContentControl}}"/>
    <Style TargetType="{x:Type controls:CustomWindow}" BasedOn="{StaticResource CustomWindow}"/>
</ResourceDictionary>
